@model Piranha.Manager.Models.PermissionEditModel
@section Head {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Access_Function').focus();
        });
    </script>
}
@section Toolbar {
@Html.Partial("Partial/Tabs")
<div class="toolbar">
    <div class="inner">
        <ul>
            <li><a class="save submit">@Piranha.Resources.Global.ToolbarSave</a></li>
            @if (!Model.IsLocked) {
            <li><a href="@Url.Action("deleteaccess", new { id = Model.Id })" class="delete">@Piranha.Resources.Global.ToolbarDelete</a></li>
            }
            <li><a href="@Url.Action("accesslist")" class="back">@Piranha.Resources.Global.ToolbarBack</a></li>
            <li><a href="@Url.Action("access", new { id = Model.Id })" class="refresh">@Piranha.Resources.Global.ToolbarReload</a></li>
        </ul>
        <div class="clear"></div>
    </div>
</div>
}
@{ Html.BeginForm() ; }
@Html.HiddenFor(m => m.Id)
<div class="grid_12">
    <div class="box">
        <div class="title"><h2>@Piranha.Resources.Global.Information</h2></div>
        <div class="inner">
            <ul class="form">
                <li>
                    @Html.LabelFor(m => m.Name, Piranha.Resources.Global.Name)
                    <div class="input">
                        @if (!Model.IsLocked) {
                            @Html.TextBoxFor(m => m.Name)
                        } else {
                            @Html.TextBoxFor(m => m.Name, new { disabled = "disabled" })
                            @Html.HiddenFor(m => m.Name)
                        }
                    </div>
                    @Html.ValidationMessageFor(m => m.Name)
                </li>
                <li>
                    @Html.LabelFor(m => m.GroupId, Piranha.Resources.Global.Group)
                    <div class="input">
                        @Html.DropDownListFor(m => m.GroupId, new SelectList(Model.PermissionGroups, "Id", "Name", Model.GroupId))</div>
                    @Html.ValidationMessageFor(m => m.GroupId)
                </li>
                <li>
                    @Html.LabelFor(m => m.Description, Piranha.Resources.Global.Description)
                    <div class="input">
                        @if (!Model.IsLocked) {
                            @Html.TextAreaFor(m => m.Description, 
                                new { @rows = 3, @placeholder = Piranha.Resources.Global.Optional })
                        } else {
                            @Html.TextAreaFor(m => m.Description, 
                                new { @rows = 3, @disabled = "disabled", @placeholder = Piranha.Resources.Global.Optional })
                            @Html.HiddenFor(m => m.Description)
                        }
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>
@{ Html.EndForm() ; }
